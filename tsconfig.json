{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es6", "es2015", "es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "pretty": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2016",
    "baseUrl": ".",
    "paths": {
      "@static/*": ["./public/static/*"],
      "@assets/*": ["./src/resources/assets/*"],
      "@pages/*": ["./src/pages/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@components/*": ["./src/resources/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@config/*": ["./src/config/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@test/*": ["./test/*"],
      "@store/*": ["./src/library/redux/store/*"],
      "@router": ["./src/library/react-router"],
      "@styled-bs-grid": ["./src/library/styled-bs-grid"],
      "@i18n": ["./src/library/intl"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "./build",
    "./scripts",
    "./acceptance-tests",
    "./webpack",
    "./jest",
    "./test",
    "package.json",
    "**/*/tests/*",
    "public/**/*",
    "./internals",
    "./razzle.config.js"
  ],
  "types": ["typePatches", "node", "webpack-env"]
}
